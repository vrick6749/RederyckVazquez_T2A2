<%= form_with model: book, local: true do |form| %>
    <div>
    <%= form.label :title%>
    <%= form.text_field :title, value: book.title%>
    </div>

    <div>
    <%= form.label :price%>
    <%= form.number_field :price, value: book.price%>
    </div>

    <% genre.all.each do |genre| %>
        <%= check_box_tag "genre[genre_ids][]", genre.id %>
        <%= genre.name%><br>
    <% end %>

    <div>
    <%= form.label :author%>
    <%= form.select(:author_id, author.map{|each| [each.name, each.id]}) %>
    </div>

    <div>
    <%= form.label :publisher%>
    <%= form.select(:publisher_id, publisher.map{|each|[each.name, each.id]})%>
    </div>

    <div>
    <%= form.submit%>
    </div>
<%end%>